<% content_for :title, "Posts" %>

<h1>Posts</h1>

   <table class="table table-striped table-hover table-bordered">
     <thead>
        <tr>
         <th> Τίτλος</th>
         <th colspan="3"> Επιλογές </th>
       </tr>
     </thead>

     <tbody>
       <% @posts.each do |post| %>
         <tr>
           <td><%= post.title %></td>
           <td><%= link_to 'Show', post, class:"btn btn-dark" %></td>
           <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-dark" %></td>
           <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
         </tr>
       <% end %>
      </tbody>
   </table>

   <br>

   <%= link_to 'New Post', new_post_path, class:"btn btn-dark"  %>